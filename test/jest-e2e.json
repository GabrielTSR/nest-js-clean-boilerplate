{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@main/(.*)": "<rootDir>/main/$1",
    "^@presentation/(.*)": "<rootDir>/presentation/$1",
    "^@infra/(.*)": "<rootDir>/infra/$1",
    "^@domain/(.*)": "<rootDir>/domain/$1",
    "^@data/(.*)": "<rootDir>/data/$1",
    "^@test/(.*)": "<rootDir>../test/$1"
  }
}
